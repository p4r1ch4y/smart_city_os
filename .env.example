# Development Environment Variables
NODE_ENV=development
PORT=3030

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_city_os
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Supabase Configuration (for Vercel functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# React App Configuration
REACT_APP_API_URL=http://localhost:3030/api
REACT_APP_WS_URL=ws://localhost:3030

# IoT Simulation
IOT_API_ENDPOINT=http://localhost:3030/api/sensors
IOT_UPDATE_INTERVAL=5000
IOT_SENSORS_COUNT=50
IOT_SERVICE_KEY=iot-service-key-2024

# Analytics Service
ANALYTICS_PORT=5000
DATABASE_URL=postgresql://postgres:password@localhost:5432/smart_city_os

# Optional Settings
FALLBACK_NO_DB=false
WAIT_FOR_DB_RETRIES=10
WAIT_FOR_DB_DELAY_MS=2000

# Dodo Payments Configuration
DODO_API_KEY=your-dodo-api-key
DODO_API_SECRET=your-dodo-api-secret
DODO_BASE_URL=https://api.dodopayments.com/v1
DODO_WEBHOOK_SECRET=your-webhook-secret
DODO_TEST_MODE=true

# Usage-Based Billing Configuration
DODO_METER_ID=your-meter-id
DODO_BILLING_CYCLE=monthly
DODO_BILLING_UNIT=service
FRONTEND_URL=http://localhost:3000